{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "downlevelIteration": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@webpack-nx-mehrzweck/data": ["packages/data/src/index.ts"],
      "@webpack-nx-mehrzweck/ui": ["packages/ui/src/index.ts"],
      "@webpack-nx-mehrzweck/utils": ["packages/utils/src/index.ts"],
      "base/Test": ["apps/base/src/app/Test.tsx"],
      "genel-muhasebe/Module": ["apps/genel-muhasebe/src/remote-entry.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
